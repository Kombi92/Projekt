@model IEnumerable<Projekt.Models.Uczen>
@{
    ViewBag.Title = "Uczniowie";
}

<h2>Uczniowie</h2>
<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Pokaż wszystkie", "Index")
    @Html.ActionLink("Sortuj po nazwisku", "SortByNazwisko")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataZapisu)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.Partial("_UczenItem", item)
        </tr>
    }

</table>
