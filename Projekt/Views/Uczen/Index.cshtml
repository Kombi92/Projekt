@model IEnumerable<Projekt.Models.Uczen>

@{
    ViewBag.Title = "Index";
}

<h2>Uczniowe</h2>

<p>
    @Html.ActionLink("Dodaj Ucznia", "Create")
    @Html.ActionLink("Pokaż wszystkie", "Index")
    @Html.ActionLink("Sortuj po nazwisku", "SortByNazwisko")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataZapisu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stopien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preferencje)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataZapisu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stopien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preferencje)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
